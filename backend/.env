# Configurações do Servidor
PORT=3001
NODE_ENV=development

# MongoDB (usando memória para desenvolvimento)
MONGODB_URI=mongodb://localhost:27017/financas-pessoais
USE_MOCK_DB=true # Usar banco de dados em memória para desenvolvimento

# JWT
JWT_SECRET=sua_chave_secreta_jwt_aqui_muito_segura
JWT_EXPIRES_IN=7d

# Frontend
FRONTEND_URL=http://localhost:5173

# Email (SMTP)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=seu-email@gmail.com
SMTP_PASS=sua_senha_de_app
SMTP_FROM=seu-email@gmail.com

# Backup
BACKUP_ENABLED=true
BACKUP_INTERVAL=86400000 # 24 horas em milissegundos
BACKUP_RETENTION_DAYS=7
